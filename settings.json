{
  "$schema": "./settings.schema.json",
  "transform": {
    "affine": {
      "x_factor": 0.95,
      "y_factor": 0.95,
      "x_center": 0.5,
      "y_center": 0.5
    },
    "rotate": {
      "angle": 0.2      
    }
  },
  "dream": {
    "iterations": 1000,
    "iterationsPer": 10,
    "inputPath": "flowers.jpg",
    "output": {
      "images": {
        "path": "frames/%04d.jpg"
      },
      "video": {
        "path": "frames/res.mp4",
        "codec": "mp4v",
        "fps": 15
      }
    },
    "octaves": 3,
    "octaveScale": 1.4
  },
  "dataLogging": {
    "log": true,
    "path": "./log.csv"
  },
  "cuda":false
}
